<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pay"
    tools:context=".Functionality.PaymentActivity">

    <TextView
        android:id="@+id/message_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you for your order! There is only one step left!"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        >
    </TextView>
    <TextView
        android:id="@+id/message_payment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_payment"
        android:layout_marginTop="175dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Please choose from the following payment methoods:"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textAlignment="center"
        >
    </TextView>
    <Button
        android:id="@+id/card_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:layout_below="@id/message_payment2"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:text="Pay online with debit card"
        android:textSize="20dp"
        >

    </Button>
    <Button
        android:id="@+id/cash_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/buttons"
    android:layout_below="@id/card_button"
    android:textAlignment="center"
        android:textColor="@color/white"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:textStyle="normal"
    android:text="Pay cash on delivery"
    android:textSize="20dp"
    >

</Button>

</RelativeLayout>