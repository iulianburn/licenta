<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminCategoryActivity">

    <TextView
        android:id="@+id/choose_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Choose category"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"

        >

    </TextView>

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="127dp"
        android:layout_height="400dp"
        android:layout_below="@id/choose_category"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="300dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/laptops_ca"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/laptops"

            />

        <ImageView
            android:id="@+id/mobiles_ca"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/mobiles" />

        <ImageView
            android:id="@+id/headphones_ca"
            android:layout_width="131dp"
            android:layout_height="80dp"
            android:src="@drawable/headphoness" />

        <ImageView
            android:id="@+id/books_ca"
            android:layout_width="131dp"
            android:layout_height="80dp"
            android:src="@drawable/books" />

        <ImageView
            android:id="@+id/watches_ca"
            android:layout_width="134dp"
            android:layout_height="80dp"
            android:src="@drawable/watches"


            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searching_listC"
        android:layout_width="300dp"
        android:layout_height="match_parent"

        android:layout_below="@+id/choose_category"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="108dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="2dp">

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>