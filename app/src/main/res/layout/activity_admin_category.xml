<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"

>

    </TextView>

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="127dp"
        android:layout_height="400dp"
        android:layout_below="@id/slogan_category"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="140dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/laptops"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/laptops"

            />

        <ImageView
            android:id="@+id/mobiles"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/mobiles" />

        <ImageView
            android:id="@+id/headphones"
            android:layout_width="131dp"
            android:layout_height="80dp"
            android:src="@drawable/headphoness" />

        <ImageView
            android:id="@+id/books"
            android:layout_width="131dp"
            android:layout_height="80dp"
            android:src="@drawable/books" />

        <ImageView
            android:id="@+id/watches"
            android:layout_width="134dp"
            android:layout_height="80dp"
            android:src="@drawable/watches"

            />
    </LinearLayout>

    <Button
        android:id="@+id/maintain_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/validateorders_btn"
        android:layout_margin="8dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        android:background="@color/black"
        android:text="Product Management"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/adlogout_btn"
        android:text="Logout"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15dp"
        android:background="@color/black"
        android:layout_alignParentBottom="true"
        />


    <Button
        android:id="@+id/validateorders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adlogout_btn"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/black"
        android:text="Check Orders"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />



</RelativeLayout>