<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Name"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/product_name_admp" />

        <ImageView
            android:id="@+id/product_image_admp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/product_name_admp"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop" />

        <EditText
            android:id="@+id/product_description_admp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_price_admp"
            android:layout_marginTop="2dp"
            android:text="Product description"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:textAlignment="center"
            android:textSize="15sp"
            android:padding="12dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/product_image_admp"
            android:id="@+id/product_price_admp"
            />

        <Button
            android:id="@+id/apply_changes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_below="@+id/product_description_admp"
            android:background="@drawable/buttons"
            android:layout_margin="5dp"
            android:padding="12dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="Apply Changes"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/delete_product_btn"
            android:background="@drawable/buttons"
            android:layout_below="@id/apply_changes"
            android:text="Delete Product"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18dp"
            android:padding="12dp"
            android:layout_margin="5dp"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>