<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/username_otf"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="User name"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/phone_otf"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:text="Phone Number"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/adress_otf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery Adress and City"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_below="@id/phone_otf"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/price_otf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total price "
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_below="@id/adress_otf"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/dat_otf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date and time"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_below="@id/price_otf"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />
       <Button
           android:id="@+id/details_btn"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:layout_marginTop="20dp"
           android:background="@color/white"
           android:text="Show details"
           android:layout_below="@+id/dat_otf"
           />
    </RelativeLayout>






</RelativeLayout>