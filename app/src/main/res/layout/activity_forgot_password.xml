<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Functionality.ForgotPasswordActivity">

    <RelativeLayout
        android:id="@+id/rl_fp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        >
        <TextView
            android:id="@+id/resetpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Reset Password"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />



    </RelativeLayout>

    <EditText
        android:id="@+id/fp_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please write your phone number"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:layout_below="@id/rl_fp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer the following questions"
        android:textSize="26dp"
        android:textAlignment="center"
        android:layout_below="@+id/fp_phone"

        android:layout_marginTop="20dp"
        android:id="@+id/titleq"
        />
    <EditText
        android:id="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="How old are you?"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:layout_margin="15dp"
        android:layout_below="@id/titleq"
        />
    <EditText
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What`s your favorite movie?"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/question_1"
        />

    <Button
        android:id="@+id/set_verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_2"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttons"
        android:padding="15dp"
        android:text="Verify"
        android:textColor="@color/white"
        android:textSize="20dp" />



</RelativeLayout>